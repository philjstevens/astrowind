---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Alpine Climbing',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Alpine Climbing"
    title="Conquer the Peaks with Our Alpine Climbing Adventures"
    subtitle="Join us for thrilling alpine climbing adventures in France, Switzerland, and Norway. Our expert guides ensure a safe and exhilarating experience."
    actions={[{ variant: 'primary', target: '_blank', text: 'Book Now', href: '/booking' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Alpine Climbing Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Why Choose Our Alpine Climbing Trips?"
    subtitle="Discover the unique features of our alpine climbing adventures."
    columns={3}
    items={[
      {
        title: 'Expert Guides',
        description:
          'Our IFMGA certified guides have extensive experience and knowledge of the best alpine climbing routes.',
        icon: 'tabler:mountain',
      },
      {
        title: 'Stunning Scenery',
        description:
          'Enjoy breathtaking views and challenging climbs in some of the most beautiful alpine regions.',
        icon: 'tabler:photo',
      },
      {
        title: 'Safety First',
        description:
          'We prioritize your safety with thorough planning, high-quality equipment, and expert guidance.',
        icon: 'tabler:shield-check',
      },
    ]}
  />

  <!-- Content Widget **************** -->

