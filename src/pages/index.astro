---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Polar Alpine & Ski Ltd. â€” Explore the Peaks with Us',
  description: 'Join us for an unforgettable adventure in the mountains.',
  ignoreTitleTemplate: true,
};
---

<Layout title={metadata.title}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Check Availability',
        href: '/calendar',
        icon: 'tabler:calendar',
      },
      { text: 'Learn More', href: '#services' },
    ]}
    image={{ src: '~/assets/images/hero-image.jpg', alt: 'Mountain Adventure' }}
  >
    <Fragment slot="title">
      Explore the Peaks with <span class="text-accent dark:text-white highlight">Polar Alpine & Ski Ltd.</span>
    </Fragment>

    <Fragment slot="subtitle">
      Join us for unforgettable mountain adventures in Norway and beyond. Ski touring, sail & ski, avalanche courses, and alpine guiding.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Our Services"
    title="What We Offer"
    subtitle="Professional and organized mountain guiding services."
    items={[
      {
        title: 'Ski Touring',
        description: 'Experience the best ski touring around Troms with our expert guides.',
        icon: 'tabler:snowflake',
      },
      {
        title: 'Sail & Ski',
        description: 'Combine sailing and skiing for a unique adventure around Troms.',
        icon: 'tabler:sailboat',
      },
      {
        title: 'Avalanche Courses',
        description: 'Learn essential avalanche safety skills with our certified courses.',
        icon: 'tabler:mountain',
      },
      {
        title: 'Alpine Climbing',
        description: 'Join us for alpine climbing in France, Switzerland, and Norway.',
        icon: 'tabler:mountain',
      },
      {
        title: 'Winter Climbing',
        description: 'Challenge yourself with winter climbing adventures.',
        icon: 'tabler:mountain',
      },
      {
        title: 'North Norway Alpine',
        description: 'Explore the alpine regions of North Norway with our experienced guides.',
        icon: 'tabler:compass',
      },
      {
        title: 'Alpine Intro',
        description: 'Get started with alpine climbing with our introductory courses.',
        icon: 'tabler:mountain',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Our Expertise"
    title="Why Choose Polar Alpine & Ski Ltd.?"
    items={[
      {
        title: 'Experienced Guides',
        description:
          'Our IFMGA certified guides have extensive experience in mountain guiding and adventure tourism.',
      },
      {
        title: 'Diverse Destinations',
        description:
          'We offer ski and climbing trips in Norway, France, Switzerland, and beyond.',
      },
      {
        title: 'Safety First',
        description:
          'We prioritize your safety with comprehensive avalanche courses and safety protocols.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Mountain Adventure',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Join Us for Unforgettable Adventures</h3>
      Experience the thrill of mountain adventures with our expert guides.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Customized Trips',
        description: `We tailor our trips to match your preferences and skill levels, ensuring a unique and personalized experience.`,
      },
      {
        title: 'Comprehensive Services',
        description:
          'From ski touring to alpine climbing, we offer a wide range of services to meet your adventure needs.',
      },
      {
        title: 'Responsive Design',
        description:
          "Our website is fully responsive, ensuring a seamless experience on all devices.",
      },
      {
        title: 'Engaging Media',
        description:
          'We incorporate high-quality images and videos to showcase our adventures and inspire your next trip.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Adventure Planning',
    }}
  >
    <Fragment slot="content">Plan your next adventure with Polar Alpine & Ski Ltd.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Book Your Adventure in Three Easy Steps"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Choose Your Adventure</span>',
        description:
          "Browse our range of ski and climbing trips. Select the adventure that excites you the most.",
        icon: 'tabler:map',
      },
      {
        title: 'Step 2: <span class="font-medium">Check Availability</span>',
        description:
          "Use our online calendar to check the availability of your chosen trip. Ensure the dates work for you.",
        icon: 'tabler:calendar',
      },
      {
        title: 'Step 3: <span class="font-medium">Contact Us to Book</span>',
        description:
          'Reach out to us via phone, email, or contact form to finalize your booking and secure your spot.',
        icon: 'tabler:phone',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps to Adventure',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Key Components"
    subtitle="Explore the essential elements of our services"
    tagline="Components"
    items={[
      {
        title: 'Guided Tours',
        description: "Navigate the mountains with our expert guides, ensuring a safe and thrilling adventure.",
        icon: 'tabler:map',
      },
      {
        title: 'Safety Courses',
        description:
          "Learn essential safety skills with our comprehensive avalanche and climbing courses.",
        icon: 'tabler:shield-check',
      },
      {
        title: 'Custom Trips',
        description:
          'Tailor your adventure to your preferences and skill level for a personalized experience.',
        icon: 'tabler:settings',
      },
      {
        title: 'Availability Calendar',
        description:
          "Check the availability of our trips online with our user-friendly calendar.",
        icon: 'tabler:calendar',
      },
      {
        title: 'Testimonials',
        description:
          'Hear from our satisfied clients about their unforgettable experiences.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Contact',
        description:
          'Get in touch with us for any inquiries or to plan your next adventure.',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Explore Our Latest Adventures"
    information={`Check out our blog for the latest updates, tips, and stories from our adventures.
                Stay informed and inspired for your next trip with Polar Alpine & Ski Ltd.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about our services and adventures."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why choose Polar Alpine & Ski Ltd.?',
        description:
          "We offer professional and organized mountain guiding services with experienced IFMGA certified guides, ensuring a safe and unforgettable adventure.",
      },
      {
        title: 'What do I need to bring for a ski tour?',
        description:
          'You will need appropriate ski gear, including skis, boots, poles, and safety equipment. We provide a detailed packing list for each trip.',
      },
      {
        title: 'How do I book a trip?',
        description:
          "You can check availability through our online calendar and then contact us via phone, email, or contact form to finalize your booking.",
      },
      {
        title: "What safety measures are in place?",
        description:
          "Safety is our top priority. We conduct thorough safety briefings, provide avalanche courses, and ensure all guides are equipped with the necessary safety gear.",
      },
      {
        title: 'Can I customize my trip?',
        description:
          "Yes, we offer customized trips tailored to your preferences and skill levels. Contact us to discuss your specific requirements.",
      },
      {
        title: 'What is your cancellation policy?',
        description:
          "Our cancellation policy varies depending on the trip. Please refer to our terms and conditions for detailed information.",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Check Availability',
        href: '/calendar',
        icon: 'tabler:calendar',
      },
    ]}
  >
    <Fragment slot="title">
      Ready for Your Next Adventure?
    </Fragment>

    <Fragment slot="subtitle">
      Join us for an unforgettable mountain experience. Check availability and contact us to book your adventure with Polar Alpine & Ski Ltd. today!
    </Fragment>
  </CallToAction>
</Layout>
