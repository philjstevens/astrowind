---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Mountain Adventure',
    }}
  >
    <Fragment slot="title">
      Discover the Thrill of <br />
      <span class="text-accent dark:text-white highlight"> Mountain Adventure</span>
    </Fragment>

    <Fragment slot="subtitle">
      At Polar Alpine & Ski Ltd., we are dedicated to providing unforgettable mountain experiences. Our team of experienced guides ensures your safety and enjoyment on every adventure.

    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Services"
    subtitle="Explore the range of services we offer to make your mountain adventure unforgettable."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Ski Touring',
        description:
          'Experience the best ski touring around Troms with our expert guides.',
        icon: 'tabler:snowflake',
      },
      {
        title: 'Sail & Ski',
        description:
          'Combine sailing and skiing for a unique adventure around Troms.',
        icon: 'tabler:sailboat',
      },
      {
        title: 'Avalanche Courses',
        description:
          'Learn essential avalanche safety skills with our certified courses.',
        icon: 'tabler:mountain',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Team"
    subtitle="Meet the experienced guides who will lead your adventures."
    columns={3}
    items={[
      {
        title: 'John Doe',
        description:
          'IFMGA Certified Mountain Guide with over 20 years of experience in alpine guiding.',
        icon: 'tabler:user',
      },
      {
        title: 'Jane Smith',
        description:
          'Expert ski instructor and avalanche safety specialist.',
        icon: 'tabler:user',
      },
      {
        title: 'Emily Johnson',
        description:
          'Professional climber and outdoor educator with a passion for teaching.',
        icon: 'tabler:user',
      },
    ]}
  />
</Layout>

 
